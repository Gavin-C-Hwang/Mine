<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadBtns"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDaumCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daum" />
        <Button
            android:id="@+id/btnFmKorea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FmKorea" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blogs"
        android:layout_below="@+id/uploadBtns"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/blogs"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/textView2"
        android:text=""/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_below="@+id/textView3"
        android:text="" />

    <Button
        android:id="@+id/btnResetPref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="16dp"
        android:text="Pref리셋" />

    <Button
        android:id="@+id/btnStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnResetPref"
        android:layout_alignBaseline="@+id/btnResetPref"
        android:layout_marginTop="16dp"
        android:text="서비스 시작하기" />

    <Button
        android:id="@+id/btnEndService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnStartService"
        android:layout_alignBaseline="@+id/btnStartService"
        android:layout_marginTop="30dp"
        android:text="서비스 종료하기" />

    <TextView
        android:id="@+id/sendResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnEndService"
        android:text=""
        />
</RelativeLayout>
</ScrollView>